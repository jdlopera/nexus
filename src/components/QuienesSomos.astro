---
/**
 * @component AboutUs
 * @description Component that displays the "About Us" section with information about the company and its promises
 * @author Cascade
 */
import { getI18N } from "../i18n";
import { getLangFromUrl } from "../i18n/utils";
import CirculoAnimadoCSS from "./ui/CirculoAnimadoCSS.astro";

const currentLang = getLangFromUrl(Astro.url);
const i18n = getI18N({ currentLocale: currentLang });
---

<section class="about-us-section">
  <div class="about-us-container">
    <!-- Text column -->
    <div class="text-column">
      <h2 class="section-title">
        {i18n.QUIENES_SOMOS.TITLE}
      </h2>
      <p class="description" set:html={i18n.QUIENES_SOMOS.DESCRIPTION} />

      <h2 class="section-title promise-title">
        {i18n.NUESTRA_PROMESA.TITLE}
      </h2>
      <ul class="promise-list">
        <li class="promise-item">
          <span class="promise-icon">✓</span>
          {i18n.NUESTRA_PROMESA.OPCION_LIST.LIST1}
        </li>
        <li class="promise-item">
          <span class="promise-icon">✓</span>
          {i18n.NUESTRA_PROMESA.OPCION_LIST.LIST2}
        </li>
        <li class="promise-item">
          <span class="promise-icon">✓</span>
          {i18n.NUESTRA_PROMESA.OPCION_LIST.LIST3}
        </li>
      </ul>
    </div>

    <!-- Circle column -->
    <div class="circle-column">
      <CirculoAnimadoCSS percentage={99} size={300} />
    </div>
  </div>
</section>

<style>
  /* UTOPIA-based variables */
  :root {
    --main-text-color: var(--color-gris);
    --secondary-text-color: var(--color-gris);
    --gold-main-color: var(--color-dorado);
  }

  /* Main container */
  .about-us-section {
    width: 100%;
    overflow: hidden;
  }

  .about-us-container {
    width: 100%;
    max-width: var(--grid-max-width);
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--espacio-m);
  }

  /* Text column styles */
  .text-column {
    display: flex;
    flex-direction: column;
    gap: var(--espacio-xs);
  }

  .section-title {
    font-size: var(--font-4);
    font-weight: bold;
    color: var(--main-text-color);
    margin-bottom: var(--espacio-2xs);
  }

  .promise-title {
    margin-top: var(--espacio-m);
  }

  .description {
    font-size: var(--font-0);
    line-height: 1.5;
    color: var(--secondary-text-color);
    margin-bottom: var(--espacio-xs);
  }

  .description b {
    color: var(--main-text-color);
    font-weight: bold;
  }

  /* Promise list */
  .promise-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
  }

  .promise-item {
    display: flex;
    align-items: flex-start;
    gap: var(--espacio-2xs);
    font-size: var(--font-0);
    color: var(--secondary-text-color);
  }

  .promise-icon {
    color: var(--gold-main-color);
    font-weight: bold;
    font-size: var(--font-1);
  }

  /* Circle column */
  .circle-column {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: var(--espacio-m);
    transform: scale(0.8);
    padding: var(--espacio-l) 0;
  }

  /* Responsive media queries */
  @media (min-width: 768px) {
    .about-us-container {
      grid-template-columns: 1fr 1fr;
      gap: var(--espacio-l);
      align-items: center;
    }

    .circle-column {
      margin-top: 0;
    }
  }

  @media (max-width: 767px) {
    .section-title {
      font-size: var(--font-2);
    }
  }
</style>
