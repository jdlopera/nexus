<Layout title="About">
  <!-- <AboutHero title="COMPANY" subtitle="We are the force that drives us" /> -->
  <HeroLamp title={i18n.AGTECH.TITLE} subtitle={i18n.AGTECH.SUBTITLE} client:only="react" />
