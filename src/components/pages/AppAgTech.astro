    <Sections
      _styles="padding-inline: var(--grid-gutter); padding-block: var(--espacio-2xl);"
    >
      {
        subHeroBody.map((item) => (
          <SubHeroBody
            title={item.title}
            description={item.description}
            description2={item.descripttions2}
          />
        ))
      }
    </Sections>
  </section>
  <section class="about-body">
    <Sections
      _styles="padding-inline: var(--grid-gutter);"
    >
      <h2 class="title-agTech">{i18n.AGTECH.ACCORDION.TITLE}</h2>
      <AcrodionAgTech {data} client:only="react" />
    </Sections>
  </section>
  <section class="about-body">
    <Sections
      _styles="padding-inline: var(--grid-gutter); padding-bottom: var(--espacio-3xl); padding-top: 0px !important;"
    >
      <h2 class="title-agTech">{i18n.AGTECH.JOIN_AGTECH.TITLE}</h2>
