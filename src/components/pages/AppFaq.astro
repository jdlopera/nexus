---
import Layout from "../../layouts/Layout.astro";
import FAQInversiones from "../blocks/FAQInversiones";
import HeroModerno from "../HeroModerno.astro";
import Sections from "../Sections.astro";
import { getI18N } from "../../i18n";
import { getLangFromUrl } from "../../i18n/utils";
import { useTranslations } from "../../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const currentLang = getLangFromUrl(Astro.url);
const i18n = getI18N({ currentLocale: currentLang });
---

<Layout>
  <HeroModerno title={i18n.FAQ.TITLE} subtitle={i18n.FAQ.DESCRIPTION} />
  <main>
    <section class="about">
      <Sections _styles="padding-inline: var(--grid-gutter);" />
      <FAQInversiones client:only="react" />
    </section>
  </main>
</Layout>
