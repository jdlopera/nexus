---
import Layout from "../../layouts/Layout.astro";
import CasosDeExito from "../CasosDeExito.astro";
import HeroModerno from "../HeroModerno.astro";
import { HistoriaCrecimientoFinanciero } from "../HistoriaCrecimientoFinanciero";
import Sections from "../Sections.astro";
import { getI18N } from "../../i18n";
import { getLangFromUrl } from "../../i18n/utils";
import { useTranslations } from "../../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const currentLang = getLangFromUrl(Astro.url);
const i18n = getI18N({ currentLocale: currentLang });
---

<Layout title="HOME">
  <HeroModerno
    title={i18n.SUCCESS_STORIES.TITLE}
    subtitle={i18n.SUCCESS_STORIES.DESCRIPTION}
  />
  <main>
    <section class="about">
      <Sections
        _styles="padding-inline: var(--grid-gutter); padding-block: var(--espacio-3xl);"
      >
        <CasosDeExito i18n={i18n} />
      </Sections>
    </section>
    <section class="about">
      <Sections
        _styles="padding-inline: var(--grid-gutter); padding-block: var(--espacio-l);"
      >
        <HistoriaCrecimientoFinanciero i18n={i18n} client:only="react" />
      </Sections>
    </section>
  </main>
</Layout>
