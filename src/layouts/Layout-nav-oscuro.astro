---
import "../styles/global.css";
import { join } from "node:path";
import { AstroFont } from "astro-font";
import Footer from "../components/Footer.astro";
import Sections from "../components/Sections.astro";
import { ClientRouter } from "astro:transitions";
import NavbarOscuro from "../components/Navbar-oscuro.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <AstroFont
      config={[
        {
          name: "Heebo",
          src: [
            {
              style: "regular",
              weight: "400",
              path: join(
                process.cwd(),
                "public",
                "fonts",
                "Heebo",
                "Heebo-Regular.ttf",
              ),
            },
            {
              style: "normal",
              weight: "500",
              path: join(
                process.cwd(),
                "public",
                "fonts",
                "Heebo",
                "Heebo-Medium.ttf",
              ),
            },
            {
              style: "bold",
              weight: "700",
              path: join(
                process.cwd(),
                "public",
                "fonts",
                "Heebo",
                "Heebo-Bold.ttf",
              ),
            },
            {
              style: "medium",
              weight: "300",
              path: join(
                process.cwd(),
                "public",
                "fonts",
                "Heebo",
                "Heebo-Light.ttf",
              ),
            },
            {
              style: "extrabold",
              weight: "900",
              path: join(
                process.cwd(),
                "public",
                "fonts",
                "Heebo",
                "Heebo-Black.ttf",
              ),
            },
            {
              style: "light",
              weight: "100",
              path: join(
                process.cwd(),
                "public",
                "fonts",
                "Heebo",
                "Heebo-Thin.ttf",
              ),
            },
          ],
          preload: false,
          display: "swap",
          cssVariable: "heebo",
          fallback: "sans-serif",
        },
        {
          name: "Proxima",
          src: [
            {
              style: "normal",
              weight: "400",
              path: join(
                process.cwd(),
                "public",
                "fonts",
                "Proxima",
                "Proxima-Regular.ttf",
              ),
            },
            {
              style: "mediumbold",
              weight: "500",
              path: join(
                process.cwd(),
                "public",
                "fonts",
                "Proxima",
                "Proxima-Medium.ttf",
              ),
            },
            {
              style: "bold",
              weight: "700",
              path: join(
                process.cwd(),
                "public",
                "fonts",
                "Proxima",
                "Proxima-Bold.ttf",
              ),
            },
            {
              style: "medium",
              weight: "300",
              path: join(
                process.cwd(),
                "public",
                "fonts",
                "Proxima",
                "Proxima-Light.ttf",
              ),
            },
            {
              style: "extrabold",
              weight: "900",
              path: join(
                process.cwd(),
                "public",
                "fonts",
                "Proxima",
                "Proxima-Black.ttf",
              ),
            },
            {
              style: "light",
              weight: "100",
              path: join(
                process.cwd(),
                "public",
                "fonts",
                "Proxima",
                "Proxima-Thin.ttf",
              ),
            },
          ],
          preload: false,
          display: "swap",
          cssVariable: "proxima",
          fallback: "sans-serif",
        },
      ]}
    />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/src/assets/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>NEXUS</title>
    <ClientRouter />
  </head>
  <body>
    <main>
      <NavbarOscuro />
      <section class="main-container">
        <slot />
        <section class="footer">
          <Sections
            _styles="padding-inline: var(--grid-gutter); padding-block: var(--espacio-1xl);"
          >
            <Footer />
          </Sections>
        </section>
      </section>
    </main>

    <!-- Script global para scroll suave -->
    <script>
      // Función para manejar el scroll suave
      function setupSmoothScroll() {
        // Seleccionar todos los enlaces con hash
        document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
          anchor.addEventListener("click", function (e) {
            // Obtener el ID del target
            const targetId = this.getAttribute("href").substring(1);

            // Si no hay ID o es vacío, no hacer nada
            if (!targetId) return;

            // Buscar el elemento target
            const targetElement = document.getElementById(targetId);

            // Si encontramos el elemento, hacer scroll suave
            if (targetElement) {
              e.preventDefault();

              // Obtener altura del navbar para compensar
              const navbar = document.querySelector("#navbar");
              const navbarHeight = navbar ? navbar.offsetHeight : 0;

              // Calcular posición del elemento
              const targetPosition =
                targetElement.getBoundingClientRect().top +
                window.scrollY -
                navbarHeight;

              // Hacer scroll suave
              window.scrollTo({
                top: targetPosition,
                behavior: "smooth",
              });

              // Actualizar URL (opcional)
              history.pushState(null, "", `#${targetId}`);
            }
          });
        });
      }

      // Ejecutar cuando el DOM esté listo
      document.addEventListener("DOMContentLoaded", setupSmoothScroll);

      // Ejecutar después de navegación con Astro
      document.addEventListener("astro:page-load", setupSmoothScroll);
    </script>
  </body>
</html>

<style>
  .footer {
    background-color: var(--color-negro);
  }
</style>
